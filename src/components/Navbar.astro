---
import { state } from "../store"
---
<nav class="fixed w-full bg-white/80 backdrop-blur-md z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-xl font-semibold text-gray-900">Fleming Technologies</a>
      </div>
      <div class="hidden md:flex items-center space-x-8">
        {
        state().navItems.map((link) => (
          <a href={link.href} class="text-gray-500 hover:text-gray-900">{link.text}</a>
        ))
        }
      </div>
    </div>
  </div>
</nav>
