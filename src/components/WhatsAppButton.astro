---
import { Icon } from 'astro-icon/components';

const { phone, message = 'Hola, me gustaría obtener más información' } = Astro.props;
const encodedMessage = encodeURIComponent(message);
const whatsAppUrl = `https://wa.me/${phone}?text=${encodedMessage}`;
---

<a href={ whatsAppUrl } target="_blank" rel="noopener noreferrer" class="fixed bottom-5 right-5 bg-[#25d366] text-white rounded-full p-3 flex items-center justify-center z-50 shadow-md transition-transform duration-300 ease-in-out hover:scale-110">
  <Icon name="mdi:whatsapp" class='w-10 h-10' />
</a>
