---
import '@/styles/global.css';
import { state } from '@/store';

import Layout from '@/layouts/Layout.astro'
import Navbar from '@/components/Navbar.astro'
import WhatsAppButton from '@/components/WhatsAppButton.astro'
import { Icon } from 'astro-icon/components'

const stateData = state();
---

<Layout>
  <Navbar />
  <main class="flex flex-col items-center justify-center h-screen bg-gray-100 text-center px-4">
    <Icon name="mdi:alert-circle-outline" class="text-gray-900 mb-8" width={75} height={75} />
    <h1 class="text-xl font-bold mb-4">404</h1>
    <p class="text-2xl text-gray-600 mb-8">Lo sentimos, la página que buscas no existe.</p>
    <a href="/" class="inline-block px-6 py-3 text-xl font-semibold text-gray-900 bg-blue-600 rounded hover:bg-blue-700">Volver a la página principal</a>
  </main>
  <WhatsAppButton phone={stateData.whatsapp.phone} message={stateData.whatsapp.message} />
</Layout>
